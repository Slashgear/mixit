        navigator.mediaDevices.getUserMedia({ audio: true, video: true })
    </script>
    <iframe src="https://play.workadventu.re/register/%22{{token}}%22" allow="camera;microphone"
    style="width: 100vw; height: 90vh"></iframe>
</div>
