{{> header}}

<div class="mxt-wrapper--header">
    <h1 class="text-center pt-5">{{#i18n}}login.title{{/i18n}}</h1>
</div>

<div class="container mxt-wrapper--page-content">
    <div class="row">
        <div class="col-10 offset-1 col-lg-6 offset-lg-3 text-center">
            <form action="/login" method="post">
                <input type="text" class="form-control" name="email" placeholder="contact@mix-it.fr" />

                <button type="submit" class="mt-3 btn btn-primary mxt-btn-primary">{{#i18n}}login.action.signin{{/i18n}}</button>
            </form>
        </div>
    </div>
</div>
{{> footer}}
