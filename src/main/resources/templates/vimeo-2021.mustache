{{> header}}
<div style="background-color: #2c233d">
    <div style="float: right;color: white;padding-right: 1em"><a href="/2021/logout">{{#i18n}}work-adventure.signout{{/i18n}}</a></div>
    <div style="color: white;text-align: center">
        <a class="button expand"
           href="/2021/work-adventure" target="work-adventure">Work Adventure</a>
        <input type="button"  class="button hollow" disabled value="Live streaming"></input>
    </div>
    <script>
        function updateVisibility(elt, value) {
            var elements = document.getElementsByClassName(elt);
            for (let i = 0; i < elements.length; i++) {
                elements.item(i).style.display = value;
            }
        }
        function hideTranscription() {
            updateVisibility('hiddable', 'none');
            updateVisibility('showable', 'inline');
        }
        function showTranscription() {
            updateVisibility('hiddable', 'inline');
            updateVisibility('showable', 'none');
        }
    </script>
    <div style="display:flex;align-items: flex-start;flex-wrap:wrap;">
        <div style="flex:2 1 auto;display: flex;flex-direction: column;margin-left: 0.5em;">
            <iframe src="https://vimeo.com/event/1000773/embed/1b2dab9eba" allow="autoplay; fullscreen"
                    allowfullscreen=""
                    style="height: 65vh" frameborder="0">
            </iframe>
            <div style="height: 2vh;color: white">
                <button class="hiddable" onclick="hideTranscription()" style="cursor:pointer;color:#ff8d4e;display: none">{{#i18n}}vimeo.hide.transcription{{/i18n}}</button>
                <button class="showable" onclick="showTranscription()" style="cursor:pointer;color:#ff8d4e;">{{#i18n}}vimeo.show.transcription{{/i18n}}</button>
            </div>
            <iframe src="www.mixit2021.scribovox.fr/" class="hiddable" style="background-color:white;flex:1;height: 13vh;display: none" frameborder="0">
            </iframe>
            <div style="color: white"><a href="www.mixit2021.scribovox.fr/" target="_blank">scribovox</a></div>
        </div>
        <iframe src="https://vimeo.com/event/1000773/chat/1b2dab9eba" style="margin-right:0.5em;margin-left: 0.5em;flex:1;height: 80vh" frameborder="0">
        </iframe>
    </div>
    <div style="height: 10vh"></div>
</div>
{{> footer-light}}
