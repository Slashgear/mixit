{{> header}}


<div class="mxt-wrapper--header">
    <h1 class="text-center pt-5">{{#i18n}}about.title{{/i18n}}</h1>
</div>

<div class="grid-container" style="position: relative;top:-2.1em;display: grid; grid-template-columns: 20% 30% 30% 20%;max-height: 20vh;height: 20vh; border: 1px red solid">
    <div class="grid-item" style="overflow: hidden;"><img src="/images/jpg/mxt_event1.jpg" style="object-fit: contain;"></div>
    <div class="grid-item" style="overflow: hidden;"><img src="/images/jpg/mxt_event2.jpg" style="object-fit: contain;"></div>
    <div class="grid-item" style="overflow: hidden;"><img src="/images/jpg/mxt_event3.jpg" style="object-fit: contain;"></div>
    <div class="grid-item" style="overflow: hidden;"><img src="/images/jpg/mxt_event2.jpg" style="object-fit: contain;"></div>
</div>


