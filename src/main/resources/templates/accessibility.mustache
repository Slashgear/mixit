        <p class="lead">{{#i18n}}accessibility.part3.lead{{/i18n}}</p>
        <p>{{#i18n}}accessibility.part3.p1{{/i18n}}</p>
        <p>{{#i18n}}accessibility.part3.p2{{/i18n}}</p>
        <p>{{#i18n}}accessibility.part3.p3{{/i18n}}</p>
    </div>
</div>

