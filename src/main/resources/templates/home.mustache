{{> header}}

<div class="mxt-wrapper--header">
    <div class="row">
        <div class="col-12 text-right d-none d-md-inline">
            <img src="/images/svg/mxt-icon--edition.svg" class="mxt-icon--edition">
        </div>
        <div class="col-12 text-cente pt-5">
            <h1 class="hide">{{#i18n}}home.wrapper.text{{/i18n}}
                <img src="/images/svg/mxt-icon--heart.svg" class="mxt-icon--heart"
                    alt="{{#i18n}}home.wrapper.title{{/i18n}}"></h1>
            <h2 class="pb-5 pt-2 mxt-text--small">
                <small>{{#i18n}}home.wrapper.dates{{/i18n}}</small>
            </h2>

        </div>
    </div>
</div>

<div class="row align-spaced">
    <div class="column column-block text-center">
        <h2 class="align-center">{{#i18n}}home.live.title{{/i18n}}</h2>
        <p>{{#i18n}}home.live.description{{/i18n}}. {{#i18n}}home.quizz.intro{{/i18n}}</p>
            <div style="display: flex">
                <div style="flex: 1 0 0" class="hide-for-small-only">&nbsp;</div>
                <div style="flex: 3 0 0">
                    <div class="mxt-wrapper--intrinsic">
                        <iframe src="https://player.vimeo.com/video/560334460" class="mxt-wrapper--video-player vimeo"
                                allowfullscreen></iframe>
                    </div>

                </div>
                <div style="flex: 1 0 0" class="hide-for-small-only">&nbsp;</div>
            </div>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
        <div class="text-center row">
            {{#sponsors-main}}
                <div class="col-3 text-center col-md-2">
                    {{> sponsor-detail }}
                </div>
            {{/sponsors-main}}
            {{#sponsors-others}}
                <div class="col-2 col-md-1 text-center">
                    {{> sponsor-detail }}
                </div>
            {{/sponsors-others}}
        </div>
    </div>
</div>

<div class="row">
    <div class="column">
        <h2 class="subheader text-center">{{#i18n}}home.sponsors.title{{/i18n}}</h2>
        <p class="text-center"><a class="mxt-anchor--uppercase" href="{{#i18n}}home.sponsors.pdf.url{{/i18n}}">{{#i18n}}home.sponsors.pdf{{/i18n}}</a> / <a
                class="mxt-anchor--uppercase" href="mailto:contact@mix-it.fr" target="_top">{{#i18n}}home.sponsors.contact{{/i18n}}</a></p>
    </div>
</div>


{{> footer}}
