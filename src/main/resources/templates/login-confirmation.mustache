{{> header}}

<div class="mxt-wrapper--page-title">
    <h1 class="text-center">{{#i18n}}login.title{{/i18n}}</h1>
</div>

<div class="container mxt-wrapper--page-content">
    <div class="row">
        <div class="col-10 offset-1 col-lg-6 offset-lg-3 text-center">
            <form action="/signin" method="post">
                <div class="row">
                    <div class="col">
                        {{#i18n}}login.confirmation{{/i18n}}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col" style="text-align: left">
                        <label for="email" class="form-label">{{#i18n}}user.form.email{{/i18n}}</label><br>
                        {{email}}
                        <input type="hidden" name="email" value="{{email}}"/>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col" style="text-align: left">
                        <input type="password" class="form-control" name="token" placeholder="Token" {{#token}}value="{{token}}"{{/token}}/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="large-12 large-centered columns">
                        <button type="submit" class="btn btn-primary mxt-btn-primary">{{#i18n}}login.action.signup{{/i18n}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer}}
